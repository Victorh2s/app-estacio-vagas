generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER 
  RECRUITER
  ADMIN
}

enum Location {
  PRESENCIAL
  REMOTO
  HIBRIDO
}

enum StatusApplication {
  PENDENTE
  APROVADA
  REJEITADA
}

model User {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String @unique
  cpf String @unique
  estacio_student Boolean
  password String 
  role Role @default(USER)
  profile Profile?
  recruiter_profile RecruiterProfile?
  applications Application[]
}

model Profile {
  id                    String     @id @default(auto()) @map("_id") @db.ObjectId
  profile_picture       String?
  curse                 String
  type_curse            String
  career_opportunity    String
  experience            Experience[]
  technical_skills      String
  education             Education[]
  professional_objective String?
  salary_expectation    Int
  work_preference       Location[]
  cv_pdf                String?
  user      User  @relation(fields: [user_id], references: [id])
  user_id   String @unique @db.ObjectId
}

model Experience {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  profile     Profile  @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  profile_id   String @db.ObjectId

}

model Education {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  institution      String
  type        String
  start_date  String
  end_date    String
  description_degree  String
  profile     Profile  @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  profile_id   String  @db.ObjectId
}

model RecruiterProfile {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  company_recruiter     String
  role_recruiter  String
  description_recruiter String
  jobOffers   JobOffer[]
  user        User    @relation(fields: [user_id], references: [id])
  user_id      String  @unique @db.ObjectId
}

model JobOffer {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  role_job        String
  company_job    String
  salary    Int
  office_location Location[] @default([])
  description  String
  requirements String
  recruiter    RecruiterProfile @relation(fields: [recruiter_profile_id], references: [id])
  recruiter_profile_id String  @db.ObjectId
  applications Application[]
}

model Application {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  user        User    @relation(fields: [user_id], references: [id])
  user_id     String  @db.ObjectId
  jobOffer    JobOffer @relation(fields: [job_offer_id], references: [id])
  job_offer_id String @db.ObjectId
  status      StatusApplication 
  createdAt   DateTime @default(now())
}